{
    "name": "upstatement/craft-netlify-trigger",
    "description": "Craft Netlify Trigger adds a way for editors to trigger a rebuild of a Netlify static site when using Craft as a Headless CMS.",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "netlify"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Pelletier",
            "homepage": "https://upstatement.com"
        }
    ],
    "support": {
        "docs": "https://github.com/Upstatement/craft-netlify-trigger/blob/main/README.md",
        "issues": "https://github.com/Upstatement/craft-netlify-trigger/issues"
    },
    "require": {
        "php": "^8.0.2",
        "craftcms/cms": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "upstatement\\netlifytrigger\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "craftcms/rector": "dev-main"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    },
    "extra": {
        "name": "Netlify Trigger",
        "handle": "netlifytrigger",
        "hasCpSettings": true,
        "hasCpSection": true,
        "changelogUrl": "https://raw.githubusercontent.com/Upstatement/craft-netlify-trigger/main/CHANGELOG.md",
        "class": "upstatement\\netlifytrigger\\NetlifyTrigger"
    }
}
